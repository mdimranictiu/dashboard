<%- include('header')-%>
<div class="text-center center-div" id="login">
<div class="container w-25 border py-5 my-5">
    <div class="title pb-5">
        <h2 class="font-weight-bold">Register</h2>
    </div>
    <form action="/route/login" method="post">
        <div class="form-group">
            <input type="email" class="form-control " placeholder="email" name="email">
        </div>
        <br>
        <div class="form-group">
            <input type="password" class="form-control" placeholder="password" name="password">
        </div><br>
        <div class="form-group">
            <input type="password" class="form-control" placeholder=" Re-password" name="password">
        </div>
        <button type="submit" class="btn btn-primary rounded-pill px-5 my-5">Sign Up</button>
    </form>
    <br>
    <h5 class="font-weight-bold">Are you existing user? <a style="text-decoration: none;" href="/">Sign In</a></h5>
</div>
</div>
<%- include('footer')-%>
